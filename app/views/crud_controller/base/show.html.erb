<dl class="dl-horizontal">
  <% @attributes.each do |attribute, _v| %>
    <dt><%= attribute.humanize%></dt>
    <dd><%= @object.send(attribute) %></dd>
  <% end %>
</dl>

<div class="actions">
  <%= link_to 'Ver todos', polymorphic_path(@klass), class: "btn btn-md btn-primary" %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_polymorphic_url(@object), :class => 'btn btn-primary btn-md' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              polymorphic_url(@object),
              :method => :delete,
              :data => { 
                confirm: t('.confirm', default: t("helpers.links.confirm",
                :default => 'Are you sure?'))
              },
              :class => 'btn btn-md btn-danger' %>
</div>

